    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo launch",
            "cargo": {
                "args": [
                    "build",
                    // "--dev"
                ]
            },
            "program": "${cargo:program}",
            "args": ["play", "6qB/4K3/8/8/3k4/8/8/8 b - - 0 1"]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'rasch'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=rasch"
                ],
                "filter": {
                    "name": "rasch",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rasch'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rasch",
                    "--package=rasch"
                ],
                "filter": {
                    "name": "rasch",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rasch'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rasch",
                    "--package=rasch"
                ],
                "filter": {
                    "name": "rasch",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
